# Hotel Sales Multi-Agent System Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# LLM Configuration (Ollama)
# Install Ollama from https://ollama.ai/ and run: ollama pull llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_API_KEY=your_ollama_api_key_here

# CrewAI Configuration (to use Ollama with CrewAI)
# These variables tell CrewAI to use Ollama instead of OpenAI
OLLAMA_OPENAI_API_KEY=your_ollama_api_key_here
OLLAMA_OPENAI_API_BASE=http://localhost:11434/v1
OLLAMA_OPENAI_MODEL_NAME=llama3.1:8b

# =============================================================================
# OPTIONAL CONFIGURATION (for full functionality)
# =============================================================================

# Pinecone Vector Database (for long-term memory)
# Get your API key from https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=hotel-sales-memory

# Google Ads API (for real campaign management)
# Get credentials from https://ads.google.com/
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_login_customer_id_here

# OpenAI API (alternative to Ollama, optional)
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Memory Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
MAX_MEMORY_RETRIEVAL=10

# Agent Configuration
MAX_ITERATIONS=3
MAX_EXECUTION_TIME=300
VERBOSE=true

# Campaign Configuration
DEFAULT_BUDGET=1000
DEFAULT_TARGET_ROAS=400
DEFAULT_CPC_BID=2.50

# File Paths
OUTPUT_DIR=outputs
LOGS_DIR=logs

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Set to 'true' to use simulators instead of real APIs
USE_SIMULATORS=false

# Set to 'true' to enable debug logging
DEBUG=false

# =============================================================================
# CONFIGURATION LEVELS
# =============================================================================

# Basic Mode (Ollama + Simulators):
# - OLLAMA_BASE_URL=http://localhost:11434
# - OLLAMA_MODEL=llama3.1:8b
# - OLLAMA_API_KEY=your_key_here
# - USE_SIMULATORS=true

# Enhanced Mode (Ollama + Pinecone):
# - Add: PINECONE_API_KEY=your_pinecone_key
# - Keep: USE_SIMULATORS=true

# Full Production Mode (All Services):
# - Add: All Google Ads credentials
# - Set: USE_SIMULATORS=false